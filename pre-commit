#!/usr/bin/env bash

set -e

# Runs linting over the changes introduced during this commit
#  - eslint is the javascript linter

git diff --name-only --cached --diff-filter=ACMRTB | grep '.tsx$' | (grep . || echo ./src/App.tsx) | xargs ./node_modules/.bin/eslint --ignore-path .gitignore
git diff --name-only --cached --diff-filter=ACMRTB | grep '.tsx$' | (grep . || echo ./src/App.tsx) | xargs ./node_modules/.bin/prettier --ignore-path .gitignore
